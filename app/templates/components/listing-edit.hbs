{{#if displayListingEdit}}
  <h3>Edit Listing</h3>
  <form {{action 'updateListing' listing on='submit'}}>
    <div class="form-group">
      <label for="seller">Seller:</label>
      {{input id="seller" value=listing.seller class="form-control" required="required"}}
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      {{input id="description" value=listing.description class="form-control" required="required"}}
    </div>
    <div class="form-group">
      <label for="price">Price</label>
      {{input id="price" value=listing.price class="form-control" required="required"}}
    </div>
    <div class="form-group">
      <label for="location">Location</label>
      {{input id="location" value=listing.location class="form-control" required="required"}}
    </div>
    <div class="form-group">
      <label for="note">Notes </label>
      {{textarea rows="4" id="note" value=listing.note class="form-control" required="required"}}
    </div>
    <button type="submit" class="btn btn-warning btn-full">Submit</button>
    <button type="button" {{action 'hideListingEdit'}} class="btn btn-danger btn-full">Cancel</button>
  </form>
{{else}}
  <button class="btn" {{action 'showListingEdit'}}>Edit Listing</button>
  <button class="btn" {{action 'deleteListing' listing}}>Delete Listing</button>
{{/if}}
